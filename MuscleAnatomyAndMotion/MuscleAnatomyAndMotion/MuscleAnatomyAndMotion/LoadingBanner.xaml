<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuscleAnatomyAndMotion.LoadingBanner" BackgroundColor="#b0000000">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <ActivityIndicator Grid.Row="0" IsVisible="true" IsRunning="true" Scale="1" HorizontalOptions="Center"/>
                <Label Text="{Binding Progress}" TextColor="Orange" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>